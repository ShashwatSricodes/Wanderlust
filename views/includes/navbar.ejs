<style>
  .navbar {
    border-bottom: 1px solid rgb(178, 176, 176); /* Black line under navbar */
  }

  .btnsearch {
    background-color: #fe424d;
    color: white;
    border-radius: 50px; /* Rounded button */
    padding: 0.4rem 0.8rem; /* Adjust padding for a smaller button */
    display: flex; /* Align icon and text side by side */
    align-items: center; /* Vertically align the icon and text */
    justify-content: center; /* Center the content inside the button */
  }

  .btnsearch:hover {
    background-color: #fe424d;
    color: white;
  }

  /* Style for the search input */
  .form-control-sm {
    border-radius: 50px; /* Makes the search bar more rounded */
    width: 80%; /* Adjust the width of the input */
  }

  .form-inline {
    width: 100%;
  }

  /* Center the form within the navbar */
  .d-flex {
    justify-content: center; /* Centers the search bar horizontally */
  }

  /* Add space between the icon and text */
  .btn i {
    margin-right: 0.5rem; /* Adds space between icon and text */
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-brands fa-airbnb"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <form class="d-flex mx-auto" style="flex-basis: 30%; min-width: 200px; max-width: 400px;" method="GET" action="/listings">
        <input class="form-control form-control-sm me-2" type="search" name="query" placeholder="Search" aria-label="Search">
        <button class="btnsearch btn-sm" type="submit">
          <i class="fa fa-search"></i> <!-- Search Icon -->
          Search
        </button>
      </form>
      

      <!-- User account links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add new Listing</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
